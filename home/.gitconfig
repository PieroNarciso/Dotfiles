[includeIf "gitdir:~/Code/Bsale/**/*"]
    path = ~/.gitconfig-bsale

[init]
    defaultBranch = main

[core]
    editor = nvim

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff

[pull]
    ff = only

[pager]
    log = true
    diff = true
    show = false
    branch = false

[color]
    ui = auto

[color "status"]
    changed = yellow
    untracked = red
    added = green bold

[alias]
    a = add
    aa = add --all
    c = commit --verbose
    co = checkout
    b = branch
    cl = clone
    pu = push
    re = reset
    logg = log --all --decorate --graph --oneline

[commit]
    gpgsign = true
